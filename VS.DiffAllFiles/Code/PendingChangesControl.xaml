<UserControl x:Class="DansKingdom.VS_DiffAllFiles.Code.PendingChangesControl"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 mc:Ignorable="d" 
						 d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<Style TargetType="{x:Type Button}">
			<Setter Property="ToolTipService.ShowDuration" Value="60000" />
			<Setter Property="Padding" Value="5,2,5,2" />
			<Setter Property="Margin" Value="0,2,5,2" />
		</Style>
	</UserControl.Resources>
	<Grid>
		<WrapPanel Orientation="Horizontal">
			<Button x:Name="btnDiffAllFiles" Content="All Files" Click="btnDiffAllFiles_Click" />
			<Button x:Name="btnDiffSelectedFiles" Content="Selected" Click="btnDiffSelectedFiles_Click" />
			<Button x:Name="btnDiffIncludedFiles" Content="Included" Click="btnDiffIncludedFiles_Click" />
			<Button x:Name="btnDiffExcludedFiles" Content="Excluded" Click="btnDiffExcludedFiles_Click" />
		</WrapPanel>
	</Grid>
</UserControl>
